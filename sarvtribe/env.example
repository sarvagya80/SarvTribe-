# Database
DATABASE_URL="postgresql://username:password@localhost:5432/sarvtribe"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Pixo Photo Editor (Optional - will use fallback if not provided)
NEXT_PUBLIC_PIXO_API_KEY="your-pixo-api-key"

# Socket.IO (for real-time features)
SOCKET_IO_PORT=3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Render Deployment
# For production, set these to your Render service URLs:
# NEXT_PUBLIC_SOCKET_URL=https://your-socket-service.onrender.com
# NEXTAUTH_URL=https://your-web-service.onrender.com
